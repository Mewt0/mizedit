<Window x:Class="MizEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MizEdit" Height="700" Width="1000">
    <DockPanel Margin="10">

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load Mission..." Click="LoadMission_Click"/>
                <MenuItem Header="Save" Click="Save_Click"/>
                <MenuItem Header="Save as Miz..." Click="SaveAsMiz_Click"/>
                <Separator/>
                <MenuItem Header="Save as Txt..." Click="SaveAsTxt_Click"/>
                <MenuItem Header="Import Txt..." Click="ImportTxt_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Batch">
                <MenuItem Header="Batch Import txt..." Click="BatchImportTxt_Click"/>
                <MenuItem Header="Batch Save as txt..." Click="BatchSaveAsTxt_Click"/>
                <MenuItem Header="Batch State Analyze..." Click="BatchStateAnalyze_Click"/>
            </MenuItem>
            <MenuItem Header="Info">
                <MenuItem Header="About" Click="InfoAbout_Click"/>
            </MenuItem>
        </Menu>

        <Border DockPanel.Dock="Top" Padding="0,10,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Locale #" VerticalAlignment="Center"/>
                <TextBox x:Name="LocaleIndexBox" Width="50" VerticalContentAlignment="Center" Margin="8,0,0,0"/>
                <StackPanel Orientation="Vertical" Margin="4,0,0,0">
                    <Button Content="Up" Width="48" Height="24" Click="LocaleUp_Click"/>
                    <Button Content="Down" Width="48" Height="24" Margin="0,4,0,0" Click="LocaleDown_Click"/>
                </StackPanel>

                <ComboBox x:Name="LocaleCombo" Width="200" Margin="8,0,0,0" SelectionChanged="LocaleCombo_SelectionChanged"/>

                <Button Content="DEL LOCALE" Padding="10,4" Margin="8,0,0,0" Click="DeleteLocale_Click"/>

                <TextBox x:Name="LocaleNameBox" Width="140" VerticalContentAlignment="Center" Margin="8,0,0,0"/>
                <Button Content="ADD LOCALE" Padding="12,4" Margin="8,0,0,0" Click="AddLocale_Click"/>
            </StackPanel>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <TextBlock x:Name="SideStatusText" Text="No File Opened" FontWeight="Bold" FontSize="14"/>
            </StackPanel>

            <TabControl Grid.Column="1">
                <TabItem Header="Briefing Text">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,10,0,10">

                            <TextBlock Text="Mission Name:" FontWeight="Bold"/>
                            <TextBox x:Name="MissionNameBox" Margin="0,5,0,15"/>

                            <TextBlock Text="Mission Description:" FontWeight="Bold"/>
                            <TextBox x:Name="MissionDescBox" Margin="0,5,0,15" Height="140"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                            <TextBlock Text="Red Task:" FontWeight="Bold"/>
                            <TextBox x:Name="RedTaskBox" Margin="0,5,0,15" Height="120"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                            <TextBlock Text="Blue Task:" FontWeight="Bold"/>
                            <TextBox x:Name="BlueTaskBox" Margin="0,5,0,15" Height="120"
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                            <Button Content="Apply to mission (in memory)" Width="250"
                                    HorizontalAlignment="Right" Click="Apply_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Pictures">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="PicturesList" Grid.Row="0" Grid.Column="0" SelectionChanged="PicturesList_SelectionChanged"/>
                        <Border Grid.Row="0" Grid.Column="1" Background="#F0F0F0" Margin="12,0,0,0" BorderBrush="#CCCCCC" BorderThickness="1">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <Image x:Name="PictureViewer" Stretch="Uniform" StretchDirection="Both"/>
                            </ScrollViewer>
                        </Border>
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Add" Width="80" Margin="0,0,8,0" Click="AddPicture_Click"/>
                            <Button Content="Remove" Width="80" Click="RemovePicture_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Kneeboard">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="KneeboardList" Grid.Row="0" Grid.Column="0" SelectionChanged="KneeboardList_SelectionChanged"/>
                        <Border Grid.Row="0" Grid.Column="1" Background="#F0F0F0" Margin="12,0,0,0" BorderBrush="#CCCCCC" BorderThickness="1">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <Image x:Name="KneeboardViewer" Stretch="Uniform" StretchDirection="Both"/>
                            </ScrollViewer>
                        </Border>
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Add" Width="80" Margin="0,0,8,0" Click="AddKneeboard_Click"/>
                            <Button Content="Remove" Width="80" Click="RemoveKneeboard_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Audio">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="AudioList" Grid.Row="0" SelectionChanged="AudioList_SelectionChanged">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Audio File" Width="400" DisplayMemberBinding="{Binding}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Play" Width="80" Margin="0,0,8,0" Click="PlayAudio_Click"/>
                            <Button Content="Stop" Width="80" Click="StopAudio_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Triggers">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListView x:Name="TriggersList" Grid.Row="0"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Add" Width="80" Margin="0,0,8,0" Click="AddTrigger_Click"/>
                            <Button Content="Remove" Width="80" Click="RemoveTrigger_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Transmit Radio">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Список радиосообщений -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ListView x:Name="RadioList" Grid.Row="0" SelectionChanged="RadioList_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Group/Task" Width="300" DisplayMemberBinding="{Binding}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Refresh" Width="80" Margin="0,0,8,0" Click="RefreshRadio_Click"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Редактор радиосообщения -->
                        <Border Grid.Column="1" Margin="12,0,0,0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Radio Message Editor" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                
                                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                    <TextBlock Text="Subtitle Dictionary Key:" FontWeight="Bold"/>
                                    <TextBox x:Name="RadioSubtitleKeyBox" Margin="0,5,0,0" IsReadOnly="True" Background="#F0F0F0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                                    <TextBlock Text="Audio File Key:" FontWeight="Bold"/>
                                    <TextBox x:Name="RadioFileKeyBox" Margin="0,5,0,0" IsReadOnly="True" Background="#F0F0F0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="3" Margin="0,0,0,10">
                                    <TextBlock Text="Duration (seconds):" FontWeight="Bold"/>
                                    <TextBox x:Name="RadioDurationBox" Margin="0,5,0,0" IsReadOnly="True" Background="#F0F0F0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="4" Margin="0,0,0,10">
                                    <TextBlock Text="Subtitle Text (editable):" FontWeight="Bold"/>
                                    <TextBox x:Name="RadioSubtitleTextBox" Margin="0,5,0,0" Height="200" 
                                             AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="5" Orientation="Horizontal">
                                    <Button Content="Save Changes" Width="120" Click="SaveRadioSubtitle_Click"/>
                                    <TextBlock x:Name="RadioStatusText" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="Green"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="Trigger Pic">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="TriggerPicsList" Grid.Row="0"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Add" Width="80" Margin="0,0,8,0" Click="AddTriggerPic_Click"/>
                            <Button Content="Remove" Width="80" Click="RemoveTriggerPic_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Script">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <ComboBox x:Name="ScriptCombo" Width="300" SelectionChanged="ScriptCombo_SelectionChanged"/>
                            <Button Content="Reload" Width="80" Margin="8,0,0,0" Click="ReloadScripts_Click"/>
                        </StackPanel>
                        
                        <TextBox x:Name="ScriptBox" Grid.Row="1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                                 TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Save Script" Width="100" Click="SaveScript_Click"/>
                            <TextBlock x:Name="ScriptStatusText" Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StatusBar>

    </DockPanel>
</Window>
